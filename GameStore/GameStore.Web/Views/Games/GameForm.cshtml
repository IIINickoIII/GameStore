@model GameViewModel
@{
    ViewBag.Title = "Game";
    Layout = "_Layout";
}
<h1>Game</h1>
<form method="post" asp-controller="Games" asp-action="Save">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label><br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Key" class="col-form-label"></label><br />
        <input asp-for="Key" class="form-control" />
        <span asp-validation-for="Key" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label><br />
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-form-label"></label><br />
        <input type="number" min="0.00" step="0.01" asp-for="Price" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discount" class="col-form-label"></label><br />
        <input type="number" min="0" step="1" max="99" asp-for="Discount" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitInStock" class="col-form-label"></label><br />
        <input type="number" min="0" step="1" asp-for="UnitInStock" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="UnitInStock" class="text-danger"></span>
    </div>
    <fieldset class="form-group">
        <div class="form-check">
            <input asp-for="Discontinued" class="form-check-input">
            <label asp-for="Discontinued" class="form-check-label"></label>
            <span asp-validation-for="Discontinued" class="text-danger"></span>
        </div>
    </fieldset>
    <div class="form-group">
        <label asp-for="PublisherId" class="col-form-label"></label>
        <select asp-for="PublisherId" asp-items="@Model.PublisherSelectList"></select>
        <span asp-validation-for="PublisherId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GenreIds" class="col-form-label"></label>
        <select asp-for="GenreIds" asp-items="@Model.GenresSelectList" multiple="multiple"></select>
        <span asp-validation-for="GenreIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlatformTypeIds" class="col-form-label"></label>
        <select asp-for="PlatformTypeIds" asp-items="@Model.PlatformTypesSelectList" multiple="multiple"></select>
        <span asp-validation-for="PlatformTypeIds" class="text-danger"></span>
    </div>
    <input asp-for="Id" type="hidden" />
    <input type="submit" value="Save" />
</form>